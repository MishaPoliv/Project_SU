{% extends 'base.html.twig' %}

{% block title %}Start page{% endblock %}

{% block body %}

<h1>Top-goods!</h1>
    <img src="{{ asset('images/images.png') }}" width="25" align="right">

<div class="card-deck product">
    {% for product in topProducts %}
    <div class="card" style="width: 18rem;">
        <img class="card-img-top" src="//placehold.it/300x200" alt="{{ product.title }}">
        <div class="card-body">
            <h5 class="card-title">
                <a href="{{ path('product_show', {id:product.id}) }}">
                    {{ product.title }}
                </a>
            </h5>
            <p class="card-text">{{ product.price }}</p>
            <p class="card-text">{{ product.description }}</p>
        </div>
    </div>

{% endfor %}
</div>
    {% endblock %}
