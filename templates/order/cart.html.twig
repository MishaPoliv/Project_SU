{% extends 'base.html.twig' %}

{% block body %}

    <h1>Basket of goods</h1>

    <table class="table">
        <tr>
            <th>Name product</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Value</th>
            <th></th>
        </tr>

        {# @var item \App\Entity\OrderItem #}
        {% for item in cart.items %}
            <tr>
                <td>{{ item.product.title }}</td>
                <td>{{ item.price }}</td>
                <td>{{ item.quantity }}</td>
                <td>{{ item.amount }}</td>
                <td><a href="{{ path('order_delete_item', {id: item.id}) }}" class="btn btn-danger">Delete</a> </td>
            </tr>
        {% endfor %}

        <tr>
            <th colspan="3">Total price</th>
            <th>{{ cart.amount }}</th>
            <th></th>
        </tr>
    </table>

    <h5>Confirm this order <button type="button" class="btn btn-success">Accept</button></h5>

{% endblock %}